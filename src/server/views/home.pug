html
  head
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    title Clone-Facebook
    meta(name="viewport", content="user-scalable=no,initial-scale=1,maximum-scale=1,minimum-scale=1,width=device-width")
  body.light-blue
    .container.teal.darken-3
      .row
        .col.s12
          .card.center-align.deep-orange.accent-1
            h1 Clone-Facebook 
        .col.s3
          .card
            .input-field.blue-grey.darken-4
              input.white-text#username
              button.btn#change-username 
                i.material-icons update
                span Nick-Name
        .col.s9#new-store
          textarea#store-text(placeholder="Que estas pensando")
          button.btn#send-store
            i.material-icons send
      .row#store
    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.1/socket.io.js")
    script(src="./js/main.js")